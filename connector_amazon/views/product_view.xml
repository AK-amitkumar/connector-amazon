<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

<record id="view_product_template_form" model="ir.ui.view">
    <field name="model">product.template</field>
    <field name="inherit_id" ref="connector_base_product.product_template_common_form"/>
    <field name="arch" type="xml">
        <page name="connector" position="attributes">
            <attribute name="invisible">0</attribute>
        </page>
        <page name="connector" position="inside">
            <group name="amazon_product" string="Amazon Binding">
                <field name="amazon_variant_bind_ids" nolabel="1">
                    <tree editable="bottom">
                        <field name="backend_id"/>
                        <field name="record_id"
                               options="{'create': false, 'create_edit': false}"
                               domain="[('product_tmpl_id', '=', parent.id)]"
                            />
                        <field name="external_id"/>
                    </tree>
                </field>
            </group>
        </page>
    </field>
</record>

</data>
</openerp>
